{% extends 'layout.njk' %}

{% block pageContent %}
  {{ pageHeadingHtml }}

  {% if viewReports.show %}
    <h2 class="govuk-heading-m">View reports</h2>

    <ul class="govuk-list">
      {% if viewReports.links.notices %}<li><a class="govuk-link" href="/system/notices">Notices</a></li>{% endif %}
      {% if viewReports.links.returnsCycles %}<li><a class="govuk-link" href="/returns-reports">Returns cycles</a></li>{% endif %}
      {% if viewReports.links.digitise %}<li><a class="govuk-link" href="/digitise/report">Digitise!</a></li>{% endif %}
      {% if viewReports.links.kpis %}<li><a class="govuk-link" href="/reporting/kpi-reporting">Key performance indicators</a></li>{% endif %}
      {% if viewReports.links.invalidAddresses %}<li><a class="govuk-link" href="/system/reports/invalid-addresses">Invalid addresses</a></li>{% endif %}
    </ul>
  {% endif %}

  {% if returnNotices.show %}
    <h2 class="govuk-heading-m">Send return notices</h2>

    <ul class="govuk-list">
      {% if returnNotices.links.invitations %}<li><a class="govuk-link" href="/system/notices/setup/standard?noticeType=invitations">Invitations</a></li>{% endif %}
      {% if returnNotices.links.paperForms %}<li><a class="govuk-link" href="/returns-notifications/forms">Paper forms</a></li>{% endif %}
      {% if returnNotices.links.reminders %}<li><a class="govuk-link" href="/system/notices/setup/standard?noticeType=reminders">Reminders</a></li>{% endif %}
      {% if returnNotices.links.adHoc %}<li><a class="govuk-link" href="/system/notices/setup/adhoc">Ad-hoc</a></li>{% endif %}
    </ul>
  {% endif %}

  {% if manageUsers.show %}
    <h2 class="govuk-heading-m">Manage users</h2>

    <ul class="govuk-list">
      {% if manageUsers.links.createAccount %}<li><a class="govuk-link" href="/account/create-user">Create an internal account</a></li>{% endif %}
    </ul>
  {% endif %}

  {% if viewWorkflow.show %}
    <h2 class="govuk-heading-m">View workflow</h2>

    <ul class="govuk-list">
      {% if viewWorkflow.links.checkLicences %}<li><a class="govuk-link" href="/charge-information-workflow">Check licences in workflow</a></li>{% endif %}
    </ul>
  {% endif %}

{% endblock %}
