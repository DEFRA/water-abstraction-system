{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block breadcrumbs %}
  {# Back link #}
  {{
    govukBackLink({
      text: 'Back',
      href: backLink
    })
  }}
{% endblock %}

{% block content %}
{# Error summary #}
  {% if error %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        {
          text: error.text,
          href: "#frequencyReported"
        }
      ]
    }) }}
  {%endif%}

  {# Main heading #}
  <div class="govuk-body">
    <span class="govuk-caption-l"> Licence {{ licenceRef }} </span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">{{ pageTitle }}</h1>
  </div>

  <form method="post">
    {{ govukRadios({
      name: "frequencyReported",
      errorMessage: error,
      items: [
        {
          value: "day",
          text: "Daily",
          checked: "day" === frequencyReported
        },
        {
          value: "week",
          text: "Weekly",
          checked: "week" === frequencyReported
        },
        {
          value: "month",
          text: "Monthly",
          checked: "month" === frequencyReported
        }
      ]
    }) }}

    <div class="govuk-body">
      {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
    </div>
  </form>
{% endblock %}
