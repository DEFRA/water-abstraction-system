{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}


{% block breadcrumbs %}
  {# Back link #}
  {{
    govukBackLink({
      text: 'Back',
      href: '/licences/' + id + '#charge'
    })
  }}
{% endblock %}

{% set dateInputHTML %}
  {{ govukDateInput({
    id: "other-start-date",
    namePrefix: "start-date",
    errorMessage: errorMessage,
    checked: false,
    fieldset: {
      legend: {
        classes: 'govuk-fieldset__legend--m',
        text: "Start date"
      }
    },
    items: dateFields
  }) }}
{% endset %}

{% block content %}

  {% if errorMessage %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        {
          text: errorMessage.text,
          href: "#startDate-error"
        }
      ]
    }) }}
  {% endif %}
  <form method="post">
    <div class="govuk-body">
      {{ govukRadios({
          name: "startDate",
          fieldset: {
            legend: {
               html: '<span class="govuk-caption-l">Licence ' + licenceRef + '</span>' + pageTitle,
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l"
            }
          },
          items: [
             {
              value: licenceStartDateValue,
              html: "Licence version start date",
              hint: {
                text:  licenceStartDate
              },
              checked: true
            },
            {
              value: "other",
              text: "Another date",
              conditional: {
                html: dateInputHTML
              }
            }
          ]
        }) }}
      {{ govukButton({ text: "Continue" }) }}
    </div>
  </form>
{% endblock %}
