{% extends 'layout.njk' %}
{% from 'govuk/components/back-link/macro.njk' import govukBackLink %}
{% from 'govuk/components/button/macro.njk' import govukButton %}
{% from 'govuk/components/date-input/macro.njk' import govukDateInput %}
{% from 'govuk/components/error-summary/macro.njk' import govukErrorSummary %}
{% from 'govuk/components/radios/macro.njk' import govukRadios %}

{% block breadcrumbs %}
  {# Back link #}
  {{
    govukBackLink({
      text: 'Back',
      href: '/licences/' + licenceId + '#charge'
    })
  }}
{% endblock %}

{% set dateInputHTML %}
  {% if errorMessage %}
    {% set dateInputClasses = 'govuk-input--width-2 govuk-input--error' %}
  {% else %}
    {% set dateInputClasses = 'govuk-input--width-2' %}
  {% endif %}

  {{ govukDateInput({
    id: 'other-start-date',
    namePrefix: 'start-date',
    errorMessage: errorMessage,
    fieldset: {
      legend: {
        classes: 'govuk-fieldset__legend--m',
        text: 'Start date'
      }
    },
    items: [
      {
        classes: dateInputClasses,
        name: 'day',
        value: anotherStartDateDay
      },
      {
        classes: dateInputClasses,
        name: 'month',
        value: anotherStartDateMonth
      },
      {
        classes: dateInputClasses,
        name: 'year',
        value: anotherStartDateYear
      }
    ]
  }) }}
{% endset %}

{% block content %}
  {% if errorMessage %}
    {{ govukErrorSummary({
      titleText: 'There is a problem',
      errorList: [
        {
          text: errorMessage.text,
          href: '#startDate-error'
        }
      ]
    }) }}
  {% endif %}

  <div class="govuk-body">
    <form method="post">
      {{ govukRadios({
          name: 'startDate',
          fieldset: {
            legend: {
              html: '<span class="govuk-caption-l">Licence ' + licenceRef + '</span>' + pageTitle,
              isPageHeading: true,
              classes: 'govuk-fieldset__legend--l'
            }
          },
          items: [
            {
              value: 'licenceStartDate',
              text: 'Licence version start date',
              hint: {
                text:  licenceStartDate
              },
              checked: false
            },
            {
              value: 'anotherStartDate',
              text: 'Another date',
              hint: {
                text: 'For example, 27 3 2007'
              },
              checked: anotherStartDateHasErrors,
              conditional: {
                html: dateInputHTML
              }
            }
          ]
        }) }}

      {{ govukButton({ text: 'Continue' }) }}
    </form>
  </div>
{% endblock %}
