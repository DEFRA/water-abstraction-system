{% extends 'layout.njk' %}

{% from 'govuk/components/button/macro.njk' import govukButton %}
{% from 'govuk/components/date-input/macro.njk' import govukDateInput %}
{% from 'govuk/components/radios/macro.njk' import govukRadios %}

{% set dateInputHTML %}
  {{ govukDateInput({
    id: 'anotherStartDate',
    errorMessage: error.anotherStartDate,
    fieldset: {
      legend: {
        classes: 'govuk-fieldset__legend--m',
        text: 'Start date'
      }
    },
    items: [
      {
        classes: "govuk-input--width-2",
        id: 'startDateDay',
        name: 'startDateDay',
        label: 'Day',
        value: startDateDay
      },
      {
        classes: "govuk-input--width-2",
        id: 'startDateMonth',
        name: 'startDateMonth',
        label: 'Month',
        value: startDateMonth
      },
      {
        classes: "govuk-input--width-4",
        id: 'startDateYear',
        name: 'startDateYear',
        label: 'Year',
        value: startDateYear
      }
    ]
  }) }}
{% endset %}

{% block pageContent %}
  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {{ govukRadios({
      name: 'startDateOptions',
      errorMessage: error.startDateOptions,
      fieldset: {
        legend: {
          html: pageHeadingHtml
        }
      },
      items: [
        {
          id: 'licenceStartDate',
          value: 'licenceStartDate',
          text: 'Licence version start date',
          hint: {
            text:  licenceVersionStartDate
          },
          checked: startDateOption === 'licenceStartDate'
        },
        {
          id: 'anotherStartDate',
          value: 'anotherStartDate',
          text: 'Another date',
          hint: {
            text: 'For example, 27 3 2007'
          },
          checked: startDateOption === 'anotherStartDate',
          conditional: {
            html: dateInputHTML
          }
        }
      ]
    }) }}

    {{ govukButton({ text: 'Continue', preventDoubleClick: true }) }}
  </form>
{% endblock %}
