{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block pageContent %}
  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {% set checkBoxItems = [] %}
    {% for licencePoint in licencePoints %}

      {% set checkBoxItem = {
        value: licencePoint.id,
        text: licencePoint.description,
        checked: licencePoint.id in selectedPointIds
      } %}

      {% set checkBoxItems = (checkBoxItems.push(checkBoxItem), checkBoxItems) %}
    {% endfor %}

    {{ govukCheckboxes({
      name: "points",
      errorMessage: error.points,
      hint: {
        text: "Select all that apply"
      },
      fieldset: {
        legend: {
          html: pageHeadingHtml
        }
      },
      items: checkBoxItems
    }) }}

    {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
  </form>
{% endblock %}
