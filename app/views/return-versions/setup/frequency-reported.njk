{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block pageContent %}
  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {{ govukRadios({
      name: 'frequencyReported',
      id: 'frequencyReported',
      errorMessage: error.frequencyReported,
      fieldset: {
        legend: {
          html: pageHeadingHtml
        }
      },
      items: [
        {
          value: "day",
          text: "Daily",
          id: "frequencyReportedDay",
          checked: "day" === frequencyReported
        },
        {
          value: "week",
          text: "Weekly",
          id: "frequencyReportedWeek",
          checked: "week" === frequencyReported
        },
        {
          value: "month",
          text: "Monthly",
          id: "frequencyReportedMonth",
          checked: "month" === frequencyReported
        }
      ]
    }) }}

    {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
  </form>
{% endblock %}
