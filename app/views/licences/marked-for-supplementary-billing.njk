{% extends 'layout.njk' %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {{ govukPanel({
      titleText: pageTitle,
      classes: "govuk-!-margin-bottom-4",
      html: "Licence number<strong><div>" + licenceRef + "</div></strong>"
    }) }}
  </div>
</div>

  {{ govukButton({
    text: "Create a bill run",
    href: "/system/bill-runs/setup"
  }) }}

  <p class="govuk-body">or</p>
  <p class="govuk-body">
    {% if featureFlags.enableSystemLicenceView %}
      <a class="govuk-link" href="/system/licences/{{ licenceId }}/set-up">Return to licence</a>
    {% else %}
      <a class="govuk-link" href="/licences/{{ licenceId }}#charge">Return to licence</a>
    {% endif %}
  </p>
{% endblock %}
