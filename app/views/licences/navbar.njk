      <a class="x-govuk-sub-navigation__link" href="summary" aria-current="{{ 'page' if activeTab === 'summary' }}">
        Licence summary
      </a>

      <ul class="x-govuk-sub-navigation__section x-govuk-sub-navigation__section--nested">
