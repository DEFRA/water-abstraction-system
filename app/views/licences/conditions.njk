{% extends 'layout-licences.njk' %}

{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% from "macros/conditions-summary-card.njk" import conditionsSummaryCards %}

{% block pageContent %}
  {% if conditionType.conditions.length === 0 %}
    <p>No conditions for this licence.</p>
  {% else %}
    <p> {{ showingConditions }} </p>
    <div class="govuk-grid-row ">
      <div class="govuk-grid-column-full">
        <div class="govuk-grid-row govuk-!-margin-bottom-3">
          {{ conditionsSummaryCards(conditionTypes) }}
        </div>
      </div>
    </div>
  {% endif %}
{% endblock %}
