{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% from "macros/bill-run-status-tag.njk" import statusTag %}

{% block breadcrumbs %}
  {{
    govukBackLink({
      text: 'Back',
      href: backLink
    })
  }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
    <span class="govuk-caption-l">{{ pageCaption }}</span>{{ pageTitle }}
  </h1>

  {% if warningMessage %}
    {{ govukWarningText({
      text: warningMessage,
      iconFallbackText: 'Warning'
    }) }}
  {% endif %}

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

  {% if billRunNumber %}
    {% set billRunLinkHtml %}
      <a href="{{ billRunLink }}" class="govuk-link">
        <span data-test="number">{{ billRunNumber }}</span> <span class="govuk-visually-hidden">View bill run {{ billRunNumber }}</span>
      </a>
    {% endset %}
  {% endif %}

  {% if billRunStatus %}
    {% set billRunStatusHtml %}
      {{ statusTag(billRunStatus, true) }}
    {% endset %}
  {% endif %}

  {{ govukSummaryList({
    classes: 'govuk-summary-list--no-border',
    attributes: {
      'data-test': 'bill-run-details'
    },
    rows: [
    {
        key: {
          text: "Bill run number"
        },
        value: {
          html: billRunLinkHtml
        }
      } if billRunNumber,
      {
        key: {
          text: "Status"
        },
        value: {
          html: billRunStatusHtml
        }
      } if billRunStatus,
      {
        key: {
          text: "Date created"
        },
        value: {
          attributes: { 'data-test': 'created' },
          text: dateCreated
        }
      } if dateCreated,
      {
        key: {
          text: "Region"
        },
        value: {
          attributes: { 'data-test': 'region' },
          text: regionName
        }
      },
      {
        key: {
          text: "Bill run type"
        },
        value: {
          attributes: { 'data-test': 'type' },
          text: billRunType
        }
      },
      {
        key: {
          text: "Charge scheme"
        },
        value: {
          attributes: { 'data-test': 'new-scheme' },
          text: chargeScheme
        }
      },
      {
        key: {
          text: "Financial year end"
        },
        value: {
          attributes: { 'data-test': 'new-year' },
          text: financialYearEnd
        }
      } if financialYearEnd
    ]
  }) }}

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

  {% if showCreateButton %}
    <form method="post">
      <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>
      {{ govukButton({ text: "Create bill run", preventDoubleClick: true }) }}
    </form>
    <hr class="govuk-section-break govuk-section-break--s">
  {% endif %}

  <a href="/system/bill-runs" class="govuk-link">Return to bill runs</a>
{% endblock %}
