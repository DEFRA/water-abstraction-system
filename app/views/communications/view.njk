{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "macros/new-line-array-items.njk" import newLineArrayItems %}

{% block breadcrumbs %}
  {# Back link #}
  {{
    govukBackLink({
      text: 'Go back to summary',
      href: "/licences"
    })
  }}
{% endblock %}

{% block content %}
  {# Main heading #}
  <div class="govuk-body">
    <span class="govuk-caption-l"> Licence {{ licenceRef }} </span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3">
      {{ pageTitle }}
    </h1>

    {{ govukInsetText({
      text: "Sent "
    }) }}
  </div>

  <div class="message-preview govuk-body">
    <div class="govuk-!-margin-bottom-3">
      {% if messageType === 'letter' %}
        {{ newLineArrayItems(address) }}
      {% endif %}
    </div>

    {% for content in contents %}
      {% if content.style == 'bold' %}
        <p class="govuk-!-font-weight-bold govuk-!-padding-bottom-0 govuk-!-margin-bottom-1"> {{ content.line }}</p>
      {% elif content.style == 'bulletPoint' %}
        <ul>
          <li class="govuk-!-padding-bottom-0 govuk-!-margin-bottom-1" >{{ content.line }}</li>
        </ul>
      {% elif content.style == 'indent' %}
        <p class="govuk-!-padding-left-3 govuk-!-padding-bottom-0 govuk-!-margin-bottom-1"> {{ content.line }}</p>
      {% elif content.style == 'space' %}
        <p class="govuk-!-padding-margin-3"></p>
      {% else %}
        <p class="govuk-!-padding-bottom-0 govuk-!-margin-bottom-1"> {{ content.line }}</p>
      {% endif %}
    {% endfor %}

  </div>
{% endblock %}
