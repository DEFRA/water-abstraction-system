{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "macros/new-line-array-items.njk" import newLineArrayItems %}

{% block breadcrumbs %}
  {{
    govukBackLink({
      text: 'Go back to communications',
      href: backLink
    })
  }}
{% endblock %}

{% block content %}
  <span class="govuk-caption-l">Licence {{ licenceRef }}</span>
  <h1 class="govuk-heading-l">{{ pageTitle }}</h1>

  {{ govukInsetText({
    attributes: { 'data-test': 'sent-date' },
    text: "Sent " + sentDate
  }) }}

  <div class="govuk-body message-preview">
    {% if messageType === 'letter' %}
      <p>{{ newLineArrayItems(address) }}</p>
    {% else %}
      <p>Sent to: {{ address }}</p>
    {% endif %}

    {{ contents | markdown | safe }}
  </div>
{% endblock %}
