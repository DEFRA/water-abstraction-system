{% extends 'layout.njk' %}
{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set panelContent %}
  <div class="govuk-panel__body govuk-!-font-size-24">
      Licence number <strong>{{ licenceRef }}</strong>
  </div>
  <div class="govuk-panel__body govuk-!-font-size-24 govuk-!-padding-top-4">
    Site description <strong>{{ siteDescription }}</strong>
  </div>
  <div class="govuk-panel__body govuk-!-font-size-24 govuk-!-padding-top-4">
    {{ purposeDetails.label }} <strong> {{ purposeDetails.value }}</strong>
  </div>
{% endset %}

{% block content %}
  {{ govukPanel({ titleText: pageTitle, html: panelContent }) }}

  {% if status === 'received' %}
    <p><a href="{{ viewReturnsLink }}">View returns for {{ licenceRef }}</a></p>
  {% else %}
    <p><a href="{{ viewThisReturnLink }}" class="govuk-link">View this return</a></p>
    <p>or</p>

    <form method="post">
      <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

      {{ govukButton({
        classes: "govuk-button--secondary",
        text: "Mark for supplementary bill run",
        preventDoubleClick: true
      }) }}
    </form>
  {% endif %}
{% endblock %}
