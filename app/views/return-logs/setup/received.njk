{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from 'govuk/components/date-input/macro.njk' import govukDateInput %}

{% block pageContent %}
  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {% set dateInputHTML %}
      {{ govukDateInput({
        id: 'date',
        name: 'date',
        errorMessage: error.date,
        fieldset: {
          legend: {
            text: 'When was the return received?'
          }
        },
        items: [
          {
            classes: 'govuk-input--width-2',
            id: 'receivedDateDay',
            name: 'receivedDateDay',
            value: receivedDateDay,
            label: 'Day'
          },
          {
            classes: 'govuk-input--width-2',
            id: 'receivedDateMonth',
            name: 'receivedDateMonth',
            value: receivedDateMonth,
            label: 'Month'
          },
          {
            classes: 'govuk-input--width-4',
            id: 'receivedDateYear',
            name: 'receivedDateYear',
            value: receivedDateYear,
            label: 'Year'
          }
        ]
      }) }}
    {% endset %}

    {{ govukRadios({
      name: "receivedDateOptions",
      errorMessage: error.receivedDateOptions,
      fieldset: {
        legend: {
          html: pageHeadingHtml
        }
      },
      items: [
        {
          id: 'today',
          value: "today",
          text: "Today",
          checked: receivedDateOption === 'today',
          hint: {
            text: todaysDate
          }
        },
        {
          id: 'yesterday',
          value: "yesterday",
          text: "Yesterday",
          checked: receivedDateOption === 'yesterday',
          hint: {
            text: yesterdaysDate
          }
        },
        {
          id: 'customDate',
          value: "customDate",
          text: "Custom date",
          checked: receivedDateOption === 'customDate',
          conditional: {
            html: dateInputHTML
          }
        }
      ]
    }) }}

    {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
  </form>
{% endblock %}
