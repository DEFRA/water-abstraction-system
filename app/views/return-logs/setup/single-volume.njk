{% extends 'layout.njk' %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-message/macro.njk" import govukErrorMessage %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% from "macros/return-reference-page-heading.njk" import pageHeading %}

{% block breadcrumbs %}
  {{ govukBackLink({ text: 'Back', href: backLink }) }}
{% endblock %}

{% block content %}
  {% if error %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        {
          text: error.message,
          href: "#single-volume-error"
        }
      ]
    }) }}
  {% endif %}

  {% set pageHeading %}
    {{ pageHeading(returnReference, pageTitle) }}
  {% endset %}

  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {% set quantityInputHTML %}
      {{ govukInput({
        label: {
          text: "Enter the total amount"
        },
        id: "single-volume-quantity",
        name: "singleVolumeQuantity",
        classes: "govuk-input--width-10",
        value: singleVolumeQuantity,
        suffix: {
          text: units
        },
        errorMessage: error.volumeInputFormElement
      }) }}
    {% endset %}

    {{ govukRadios({
      id: "single-volume",
      name: "singleVolume",
      errorMessage: error.radioFormElement,
      fieldset: {
        legend: {
          html: pageHeading
        }
      },
      items: [
        {
          value: "yes",
          text: "Yes",
          checked: singleVolume === 'yes',
          conditional: {
            html: quantityInputHTML
          }
        },
        {
          value: "no",
          text: "No",
          checked: singleVolume === 'no'
        }
      ]
    }) }}

    {{ govukButton({ text: "Continue", preventDoubleClick: true }) }}
  </form>
{% endblock %}
