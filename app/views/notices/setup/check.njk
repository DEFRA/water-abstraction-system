{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/pagination/macro.njk" import govukPagination %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% from "macros/new-line-array-items.njk" import newLineArrayItems %}

{% set rows = [] %}

{% if recipients.length > 0 %}
  {% for recipient in recipients %}
    {% set licenceNumbers %}
      {% if recipient.licences.length > 5 %}
        {{ govukDetails({
          classes: 'govuk-!-margin-bottom-0',
          summaryText: recipient.licences.length + ' licences',
          html: newLineArrayItems(recipient.licences)
        }) }}
      {% else %}
        {{ newLineArrayItems(recipient.licences) }}
      {% endif %}
    {% endset %}

    {% set rows = (rows.push([
      {
        text: newLineArrayItems(recipient.contact)
      },
      {
        html: licenceNumbers
      },
      {
        text: recipient.method
      },
      {
        html: '<a href="' + recipient.previewLink + '">Preview</a>'
      } if recipient.previewLink
    ]), rows) %}
  {% endfor %}
{% endif %}

{% block pageContent %}
  {{ pageHeadingHtml }}

  <p> {{ readyToSend }}</p>

  {% if recipients.length > 0 %}
    <div class="govuk-button-group">

      {{ govukButton({
        text: "Download recipients",
        classes: "govuk-button--secondary",
        href: links.download,
        preventDoubleClick: true
      }) }}

      {% if links.removeLicences %}
        {{ govukButton({
          text: "Remove licences",
          classes: "govuk-button--secondary",
          href: links.removeLicences,
          preventDoubleClick: true
        }) }}
      {% endif %}

      {% if links.manage %}
        {{ govukButton({
          text: "Manage recipients",
          classes: "govuk-button--secondary",
          href: links.manage,
          preventDoubleClick: true
        }) }}
      {% endif %}
    </div>

    {% if pagination.numberOfPages > 1 %}
      <p data-test="recipients-count"> Showing {{ defaultPageSize }} of {{ recipientsAmount }} recipients </p>
    {% else %}
      <p data-test="recipients-count"> Showing all {{ recipientsAmount }} recipients </p>
    {% endif %}

    {{ govukTable({
      captionClasses: "govuk-table__caption--m",
      firstCellIsHeader: false,
      head: [
        {
          text: "Recipient"
        },
        {
          text: "Licence number"
        },
        {
          text: "Method"
        },
        {
          text: "Action"
        } if displayPreviewLink
      ],
      rows: rows
    }) }}

    {% if pagination.numberOfPages > 1 %}
      {{ govukPagination(pagination.component) }}
    {% endif %}

    <div class="govuk-button-group">
      <form method="post">
        <input type="hidden" name="wrlsCrumb" value="{{ wrlsCrumb }}" />

        {{ govukButton({ text: 'Send', preventDoubleClick: true }) }}

        {{ govukButton({
          text: "Cancel",
          classes: "govuk-button--secondary",
          href: links.cancel,
          preventDoubleClick: true
        }) }}
      </form>
    </div>
  {% endif %}
{% endblock %}
