{% extends 'layout.njk' %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "macros/new-line-array-items.njk" import newLineArrayItems %}

{% block pageContent %}
  <h2 class="govuk-heading-xl">{{ pageTitle }}</h2>

  {{ govukSummaryList({
    rows: [
      {
        key: {
          text: 'Licence number'
        },
        value: {
          text: licenceRef
        },
        actions: {
          items: [
            {
              href: links.licenceNumber,
              text: 'Change',
              visuallyHiddenText: 'licence number'
            }
          ]
        }
      } if licenceRef,
      {
        key: {
          text: 'Returns notice type'
        },
        value: {
          text: returnNoticeType
        },
        actions: {
          items: [
            {
              href: links.noticeType,
              text: 'Change',
              visuallyHiddenText: 'notice type'
            }
          ]
        }
      },
      {
        key: {
          text: 'Returns period'
        },
        value: {
          text: returnsPeriodText
        },
        actions: {
          items: [
            {
              href: links.returnsPeriod,
              text: 'Change',
              visuallyHiddenText: 'returns period'
            }
          ]
        }
      } if returnsPeriodText,
      {
        key: {
          text: 'Returns'
        },
        value: {
          html: newLineArrayItems(returns)
        },
        actions: {
          items: [
            {
              href: links.returns,
              text: 'Change',
              visuallyHiddenText: 'returns for paper return'
            }
          ]
        }
      } if returns
    ]
  }) }}

  <form method="post">
    <input type="hidden" name="wrlsCrumb" value="{{wrlsCrumb}}"/>

    {{ govukButton({ text: "Confirm", preventDoubleClick: true }) }}
  </form>
{% endblock %}
